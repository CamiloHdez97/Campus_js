//Declarar un Array
let peliculas = [];

//Inicializar Array con dato
let personajes = ['Iron Man'];

//Acceder a un ejemplo del array por el indicie
console.log(personajes[0]);

//Agregar un elemento al final
personajes.push('Pantera Negra');
console.log(personajes);

//Recorrer un Array
personajes.forEach(function(elemento, indice, array){
    console.log(elemento, indice); 
});

//Eliminar el ultimo elemento
let ultimo = personajes.pop();
console.warn(personajes);

//Eliminar el primero
let primero = personajes.unshift();

//Encontrar un indice de un elemento del Array
let pos = personajes.indexOf('Iron Man');

//Eliminar un elemento por posici√≥n
let elementoEliminado = personajes.splice(personajes.indexOf('Iron Man'),1);


//Eliminar varios elementos
let posicion = personajes.indexOf('Hulk');
let nroElementosBorrar = 2;
personajes.splice(posicion,nroElementosBorrar);


//Longitud del arreglo
console.log(`Total de elementos en un arreglo ${personajes.length}`);

//Verificar Item en array Devuelve True
personajes.includes('Spiderman');

//Unir con un Join los items en una sola cadena de texto.
personajes.join();

//Ordenar Items
console.log(personajes.sort());

